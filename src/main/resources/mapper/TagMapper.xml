<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qiushengfei.dao.TagDao">
	<!-- 查询 -->
	<select id="select" resultType="Tag">
		SELECT * FROM cms_tag

	</select>
	<!-- ID查询 -->
	<select id="selectById" resultType="Tag">
		SELECT * FROM cms_tag WHERE id=#{id}

	</select>
	<!--修改 -->
	<update id="update">
		UPDATE cms_tag
		SET tagname=#{tagname}
		WHERE id=#{id}

	</update>
	<!-- 删除 -->
	<delete id="delete">
		DELETE FROM cms_tag WHERE id in(${ids})

	</delete>
	<!-- 添加 -->
	<insert id="insert">
		INSERT INTO cms_tag(tagname)VALUES
		(#{tagname})

	</insert>


</mapper>  